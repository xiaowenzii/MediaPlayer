<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="60dp"
        android:background="@mipmap/live_num_big">

        <TextView
            android:id="@+id/live_top_channel_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/S48"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp">

        <RelativeLayout
            android:id="@+id/live_bottom_name_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="40dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/live_bottom_name">


            <TextView
                android:id="@+id/live_bottom_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:textColor="@color/white_1"
                android:textSize="@dimen/S36" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/live_bottom_num_layout"
            android:layout_width="80dp"
            android:layout_centerVertical="true"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/live_num">

            <TextView
                android:id="@+id/live_bottom_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="@dimen/S36"/>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
