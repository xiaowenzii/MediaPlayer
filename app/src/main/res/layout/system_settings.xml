<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/live_play_channel_list_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_switch"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/backgroud_selector"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/st_selfstart"
                android:layout_marginLeft="40dp"
                android:text="@string/self_start_words"
                android:textColor="@color/white"
                android:textSize="@dimen/S32"/>

            <Switch
                android:id="@+id/st_selfstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:textOff="        "
                android:textOn="        "
                android:thumb="@drawable/thumb"
                android:track="@drawable/track"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_banben"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/backgroud_selector"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/textcolor_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:text="@string/version"
                android:textColor="@color/white"
                android:textSize="@dimen/S32"/>

            <TextView
                android:id="@+id/tv_banben"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/tv_xin"
                android:textColor="@color/white"
                android:textSize="@dimen/S32"/>

            <TextView
                android:id="@+id/tv_xin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/S16"/>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>

